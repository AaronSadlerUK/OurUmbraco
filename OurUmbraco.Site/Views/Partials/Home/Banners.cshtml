@model OurUmbraco.Community.Banner.Models.Banners
@{
    if (Model == null || Model.Collection == null || Model.Collection == null)
    {
        return;
    }

    var banners = Model.Collection.Where(x => x.All == true || x.Countries.InvariantContains(Model.Location.Country) || x.Continents.InvariantContains(Model.Location.Continent));
}

@if (banners.Any())
{
    <div id="banners">
        <section class="section">
            <div class="container">

                @foreach (var banner in banners)
                {
                    <div class="banner">
                        <a href="@banner.Link">
                            <img src="@banner.Image.GetCropUrl(height: 200, width: 1000)" alt="@banner.Name" />
                        </a>
                    </div>
                }

            </div>
        </section>
    </div>
}